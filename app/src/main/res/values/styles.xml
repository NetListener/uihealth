<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 状态栏颜色-->
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <!-- toolbar's color-->
        <item name="colorPrimary">#80D8FF</item>
        <!-- the style of the back-->
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>

    </style>
    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#80D8FF</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#ffffff</item>
        <item name="rippleBackport">true</item>

    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="AppTheme.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="ForumActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- 设置toolbar主题-->
    <style name="ResultToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:textSize">16dp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="MyMoreBeforeDataTextview" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>
    <style name="MyMoreResultFragmentTextview" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="MyMoreBeforeResyltTextview" parent="MyMoreBeforeDataTextview">
        <item name="android:textSize">24sp</item>

        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Forum_Text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">

        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="ForumcontentActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#33BB77</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="android:listDivider">@drawable/item_divider</item>
    </style>

</resources>
