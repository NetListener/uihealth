<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 状态栏颜色-->
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <!-- toolbar's color-->
        <item name="colorPrimary">#80D8FF</item>
        <!-- the style of the back-->
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>

    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="AppTheme.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="ResultToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <!-- 字体的大小-->
        <item name="android:textSize">20dp</item>
    </style>

    <style name="MyMoreBeforeDataTextview" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="MyMoreBeforeResyltTextview" parent="MyMoreBeforeDataTextview">
        <item name="android:textSize">24dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

</resources>
