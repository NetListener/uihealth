<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"  />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:id="@+id/layout_changeuserInfo"
        >


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageview_activity_otheruserPhoto"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            fresco:retryImageScaleType="centerCrop"
            fresco:actualImageScaleType="focusCrop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imageview_activity_otheruserPhoto"
            android:layout_marginLeft="10dp"
            android:id="@+id/textview_acitivty_othernickname"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrowsmall"
            android:layout_toRightOf="@id/imageview_activity_otheruserPhoto"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:id="@+id/view1"
        android:layout_below="@id/layout_changeuserInfo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_below="@id/view1"
        android:id="@+id/layout1"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:id="@+id/layout_activity_othercheckfollowing"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注数"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_other_otherfollowingnumber"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="45dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:id="@+id/layout_activity_othercheckfollower"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝数"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_activity_otherfollowernumber"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="45dp"
                />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:id="@+id/view2"
        android:layout_below="@id/layout1"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:id="@+id/view4"
        android:layout_marginTop="15dp"
        android:layout_below="@id/layout1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/layout_activity_othercheckforum"
        android:background="@drawable/selector"
        android:layout_below="@id/view4"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/forum"
            android:id="@+id/image_forum"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ta的博客"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/image_forum"
            android:layout_centerVertical="true"
            android:id="@+id/text_otherforum"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrowsmall"
            android:layout_toRightOf="@id/text_otherforum"
           android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:id="@+id/view3"
        android:layout_below="@id/layout_activity_othercheckforum"/>

    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:id="@+id/progressbar_userinfofragment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#1E88E5"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:id="@+id/layout_activity_tofollow"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/tofollow"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:id="@+id/layout_activity_tomessage"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="发私信"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
