<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"  />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:id="@+id/layout_changeuserInfo"
        android:background="@drawable/selector"
        android:clickable="true"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/imageview_fragment_userPhoto"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imageview_fragment_userPhoto"
            android:layout_marginLeft="10dp"
            android:id="@+id/textview_fragment_nickname"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"  />

    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:id="@+id/progressbar_userinfofragment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#1E88E5"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

</RelativeLayout>
