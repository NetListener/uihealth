<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_item_forumoften"
            android:layout_width="240dp"
            android:layout_height="100dp"
            style="@style/Forum_Text"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_item_forumoften"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/tv_item_forumoften"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_item_forumoften_face"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_item_forumoften_nickname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/img_item_forumoften_face"
                android:gravity="center"
                style="@style/Forum_Text"
                />

            <TextView
                android:id="@+id/tv_item_forum_statictext"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="发布于"
                android:layout_toRightOf="@+id/tv_item_forumoften_nickname"
                android:gravity="center"
                style="@style/Forum_Text"
                />

            <TextView
                android:id="@+id/tv_item_forumoften_time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/tv_item_forum_statictext"
                android:gravity="center"
                style="@style/Forum_Text"
                />

            <TextView
                android:id="@+id/tv_item_forumoften_feedback"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="回复 0"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="4dp"
                style="@style/Forum_Text"
                />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>